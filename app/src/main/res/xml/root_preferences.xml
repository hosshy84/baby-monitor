<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/menu_home">

        <EditTextPreference
            app:key="url"
            app:title="@string/url"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/menu_live">

        <EditTextPreference
            app:key="@string/live_url_key"
            app:title="@string/live_url_name"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="@string/webhook_url_key"
            app:title="@string/webhook_url_name"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            app:key="@string/isMute_key"
            app:title="@string/isMute_name"
            app:summary="チェックした場合、音声をOFFにします"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>